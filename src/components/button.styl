/* @group Button */
-highlight($strength = .3)
  box-shadow: s("inset 0 1px 0 %s", rgba(255,255,255,$strength))

button, .button, [type=submit]
  -highlight()
  border:0
  border-radius: 0.25rem
  background: $grey-200
  color: $black
  cursor: pointer
  font-size: golden-font-size-base rem
  padding: (5 * golden-ratio)px (10 * golden-ratio)px
  text-align: center
  text-decoration: none
  text-transform: uppercase
  transition: all 150ms linear
  user-select: none
  vertical-align: middle
  white-space: nowrap
  &:link, &:visited
    background: $grey-200
    color: $black
  &:active,
  &.active
    background: $grey-400
    color: $black
    opacity: 0.85
    transition: all 150ms linear
    text-decoration: none
  &:hover
    opacity: 0.5
    transition: all 150ms linear
    text-decoration: none
  &:focus
    background: $grey-100
    color: $black
    opacity: 0.7
    transition: all 150ms linear
    text-decoration: none
  &:disabled
    cursor: default
    opacity: .5
    pointer-events: none
    transition: all 150ms linear
  &.primary
    background: $primary
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &.secondary, &.info
    background: $secondary
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &.success
    background: $success
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &.error
    background: $error
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &.warning
    background: $warning
    color: $white
    cursor: pointer
    transition: all 150ms linear
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &.link
    background: 0 0
    border-color: transparent
    color: color-blue
    cursor: pointer
    transition: all 150ms linear
    text-decoration: none
    &:visited
      color: color-purple
    &:hover,&:active
      color: color-red
      text-decoration: underline
    &:focus
      color: color-red
      outline: thin dotted
      outline: 1px auto -webkit-focus-ring-color
      outline-offset: -2px

.button-group
  *letter-spacing: normal
  *word-spacing: -0.43em
  border: 0
  border-radius: 0
  letter-spacing: -0.31em
  text-rendering: optimizespeed

.btn
  border-radius: .3rem
  cursor: pointer
  display: inline-block
  font-size: golden-font-size-base rem
  line-height: 60px
  min-height: 60px
  min-width: 60px
  position: relative
  text-align: center
  text-decoration: none
  text-transform: uppercase
  transition: all 150ms linear
  user-select: none
  vertical-align: middle
  white-space: nowrap
  z-index: 1
  &:hover
    opacity: 0.5
    transition: all 150ms linear
    text-decoration: none
  &-round
    border-radius: 50%
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &-oval
    border-radius: 61.25rem
    min-width: 9rem
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none
  &-outline
    border: 2px solid transparent
    &:hover
      opacity: 0.5
      transition: all 150ms linear
      text-decoration: none

.block
  border: none
  display: block
  height: 60px
  padding: .6rem
  width: 98.7%
  line-height: 60px

/* @end */
