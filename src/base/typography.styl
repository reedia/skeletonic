/* @group Typography */
fontSize = (4.6 3.6 2.8 2.2 1.8 1.6)
lineHeight = (1.2 1.25 1.3 1.35 1.5 1.4)
for index in (0..5)
    h{index+1}
        font-size: fontSize[index]rem
        font-weight: 300
        letter-spacing: -.1rem
        line-height: lineHeight[index]
        margin-bottom: golden-ratio rem
        margin-top: 0
/* @end */
